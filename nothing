			<button id="btn">Click Here For A Surprise!</button>
		</div>
	</section>

	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

	<script>
		$(document).ready(function(){
			$("#btn").click(function(){
				$.getJSON("https://ipinfo.io", function(data){
					$(".ip_address").text(data.ip)
				})
			})
		})
	</script>

